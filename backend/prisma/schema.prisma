datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String?
  email    String   @unique
  password String
  orders   Order[]
}

model Product {
  id       Int      @id @default(autoincrement())
  name     String
  category String
  price    Float
  image    String?
}

model Order {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  items      Json
  total      Float
  createdAt  DateTime @default(now())
}
